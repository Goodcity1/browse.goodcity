<ul class="large-block-grid-6 small-block-grid-1 medium-block-grid-3 list items_list">
  {{#each pagedContent key="@index" as |item|}}
    <li>
      {{#link-to 'item' item (query-params sortBy=sortBy categoryId=category) }}
        {{cloudinary-image-tag src=item.displayImageUrl}}
        <div class="item_desc">
          <li class="ellipsis two-line-ellipsis">{{item.donorDescription}}</li>
        </div>
      {{/link-to}}
    </li>
  {{/each}}
</ul>

{{#if showPaginationBar}}
  {{page-numbers content=pagedContent}}
{{/if}}
