<div class="row checkout_pages">
  <div class="small-12 large-6 columns">
    <section class="main-section login-page">

      {{partial "navigation_list"}}

      <div class="row">
        <div class="small-12 columns">
          <div class="mobile">
            <div class="row">
              <div class="small-12 columns">
               <label class="form-label">{{t "login.hk_only"}}</label>
              </div>
            </div>

            <div class="row collapse">
              <div class="small-8 large-6 columns">
                <span class="prefix">+852</span>
                {{numeric-input value=mobilePhone name="mobilePhone" id="mobile" maxlength="8" required=true pattern=".{8,}" autoFocus=true}}
              </div>
            </div>

            <div class="row collapse">
              <div class="small-8 large-6 columns">
                <button id="getsmscode" type="submit" class="button expand">{{t "login.smscode"}}</button>
              </div>
            </div>
          </div>
        </div>
      </div>

    </section>
  </div>

  {{partial "checkout_cart_section"}}
</div>
