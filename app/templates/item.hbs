<nav class="tab-bar item-controls">
  <section class='main-section'>
    <div class="row">
      <div class="large-4 medium-4 small-12 columns hide-for-small">
        <h1 class="title">{{t "itemdetail.view"}}</h1>
      </div>

      <div class="large-8 medium-8 small-12 columns item-page">
        {{#link-to 'package_category' categoryObj class="button tiny info radius left show-for-small item-remove-icon"}}
          <i class="fa fa-2x fa-times remove-icon"></i>
        {{/link-to}}

        <ul class="text-right pagination right">
          <li class="arrow prev enabled-arrow" {{action "setDirectionAndRender" "moveRight" on="click"}}>
            <a disabled="{{noPreviousItem}}">
              <i class="fa fa-arrow-left"></i>
              <span class="hide-for-small">{{t "itemdetail.previous"}}</span>
            </a>
          </li>

          <li class="arrow next enabled-arrow" {{action "setDirectionAndRender" "moveLeft" on="click"}}>
            <a disabled="{{noNextItem}}">
              <span class="hide-for-small">{{t "itemdetail.next"}}</span>
              <i class="fa fa-arrow-right"></i>
            </a>
          </li>
        </ul>

      </div>
    </div>
  </section>
</nav>

<section class="main-section view-item {{direction}}">
  {{#liquid-bind model as |model| }}

    <div class="row complete_item_view">
      <div class="large-4 medium-4 small-12 columns images-section right">
        {{!-- IMAGES SECTION --}}
        {{image-preview item=model previewUrl=previewUrl smallScreenPreviewUrl=smallScreenPreviewUrl}}

        <div class="row hide-for-small" >
          {{#if hideThumbnails}}
            {{#each model.sortedImages key="@index" as |image|}}
              <img class="thumb-image {{if (is-equal previewUrl image.previewImageUrl) 'thumb'}}" src="{{image.thumbImageUrl}}" {{action "showPreview" image on="click"}} />
            {{/each}}
          {{/if}}
        </div>

        {{!--  --}}
      </div>

      <div class="large-8 medium-8 small-12 columns">

        {{!-- DETAILS SECTION --}}
        <div class="item_name">{{model.mainPackage.notes}}</div>
        <p>
          <div class="item_details">
            {{t "itemdetail.condition"}}: {{model.donorCondition.name}}
          </div>
          <div class="item_details">
            {{t "itemdetail.quantity"}}:  {{model.mainPackage.quantity}}
          </div>
          <div class="item_details">
            {{t "itemdetail.size"}}:      {{model.mainPackage.dimensions}}
          </div>
          <div class="item_details">
            {{t "itemdetail.categories"}}:
            {{#each model.allPackageCategories key="@index" as |category|}}
              {{#link-to 'package_category' category}}{{category.name}}{{/link-to}},
            {{/each}}
          </div>
        </p>
        {{!--  --}}

        {{!-- OTHER PACKAGES DETAILS --}}
        {{#each model.otherPackages key="@index" as |package|}}
          <div class="item_name">{{package.notes}}</div>
          <p>
            <div class="item_details">
              {{t "itemdetail.quantity"}}: {{package.quantity}}
            </div>
            <div class="item_details">
              {{t "itemdetail.size"}}: {{package.dimensions}}
            </div>
          </p>
        {{/each}}
        {{!--  --}}
      </div>
    </div>

  {{/liquid-bind}}
</section>
