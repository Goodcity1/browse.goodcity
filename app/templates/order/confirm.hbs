{{#message-box btn1Text='ok' btn1Callback=(action "openCart") isVisible=cart.isAnyItemMissing}}
  <p> One or many items in your cart are no longer available. Please remove those items from cart and then proceed. </p>
{{/message-box}}
<div class="row checkout_pages">
  <div class="small-12 large-6 columns">
    <section class="main-section login-page">
      {{partial "navigation_list"}}
      {{partial "organisation_detail"}}
      {{partial "confirm_order"}}
    </section>
    <div class="order_button">
      <div class="small-4 columns">
        {{#link-to "cart"}}
          <i class="fa fa-angle-left" aria-hidden="true"></i>
            {{t "order.return_to_cart"}}
        {{/link-to}}
      </div>
      <div class="small-8 columns">
        <button id="submit_pin" class="button expand drop_off" {{action 'confirmOrder' order}}>
          {{t "order.submit_this_order"}}
        </button>
      </div>
    </div>
  </div>
  {{partial "cart_content/checkout_full_view"}}
</div>

